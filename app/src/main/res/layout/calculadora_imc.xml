<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/background_light">

    <!-- Título da Calculadora -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de IMC"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Seletor de Sexo (Masculino/Feminino) -->
    <RadioGroup
        android:id="@+id/radioGroupSexoImc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioMasculinoImc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioFeminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino"/>
    </RadioGroup>

    <!-- Campo para inserir a Altura -->
    <EditText
        android:id="@+id/edtAlturaImc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua altura (em metros)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Campo para inserir o Peso -->
    <EditText
        android:id="@+id/edtPesoImc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu peso (em kg)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="24dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Resultado do Cálculo -->
    <TextView
        android:id="@+id/txtResultadoImc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado: "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"/>

    <!-- Botão para Calcular -->
    <Button
        android:id="@+id/btnCalcularImc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botão para Voltar -->
    <Button
        android:id="@+id/btnVoltarIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="18sp"
        android:padding="12dp"/>
</LinearLayout>
